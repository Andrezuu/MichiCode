{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    /*"declaration": false,*/
    "removeComments": true,
    "sourceMap": true,
    /*"allowJs": false,*/
    /*"isolatedModules": true*/
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}